package mapping

@liveLogin: if (LIVE_ENV) { "/login" };
@submit: "foo/bar";

Mapping Login

	URL {
		path:
			if (LIVE_ENV) { "/login" } else { "/loginfoo" } 
		fragment:
			if (!HTML5_HISTORY) { "#/login" }
		query:
			@color // from same package in other file
	}

	Title { 
		"foo"   
	}
	
	Login.Password {
		if ("afsd") {
			"ff"
		} else {
			"bar"
		}
	}
	
	
	List.Countries {
		if (DEV_ENV) {
			"input-dev:username"
		} else {
			"input:username"
		}
	}
	
	
	
	Submit { 
        NLS {
			en: if ("foo" <= "faz" || "fasd" <= "") { "Sign in"} else { "Sign on" };
			de:  "Anmelden" ;
			fr: "Se connecter";
			it: "Accedi";
		}
	}

	Submit { 
       "foo/bar"
	}